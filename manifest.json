{
  "manifest_version": 3,
  "name": "Facebook & Instagram 音量控制(測試版)",
  "author": "一嘟波波曜",
  "version": "0.9-alpha",
  "description": "允許調整FB reel跟IG影片音量，不然真的有夠大聲",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.instagram.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
